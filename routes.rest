### ========================================
### STUDENTS ENDPOINTS
### ========================================

# Get all students
GET http://localhost:3000/students
Content-Type: application/json

###

# Get a single student by ID
GET http://localhost:3000/students/68864bed3c73f6fdc2cf8728
Content-Type: application/json

###

# Create a new student
POST http://localhost:3000/students
Content-Type: application/json

{
    "firstName": "Syla",
    "lastName": "Cumuyog",
    "email": "syla@example.com",
    "birthDate": "2003-04-15T00:00:00.000+00:00",
    "gender": "Female",
    "country": "Philippines",
    "enrolledCourse": "6886484583377811cd8dc385"
}

###

# Update a student by ID
PUT http://localhost:3000/students/688e4c4adf18657252871310
Content-Type: application/json

{
    "firstName": "Mariosaaa",
    "lastName": "Cumuyog",
    "email": "syla.updated@example.com",
    "birthDate": "2003-04-15T00:00:00.000+00:00",
    "gender": "Female",
    "country": "Philippines",
    "enrolledCourse": "6886484583377811cd8dc385"
}

###

# Delete a student by ID
DELETE http://localhost:3000/students/688e4c4adf18657252871310
Content-Type: application/json

